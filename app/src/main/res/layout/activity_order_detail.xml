<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_order_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.yuzelli.fooddelivered.view.activity.OrderDetailActivity">
    <include
        android:id="@+id/include_common_topbar"
        layout="@layout/include_common_topbar" />
    <TextView
        android:id="@+id/tv_order_create_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="下单时间：20"
        android:textColor="@color/next_color"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/img_order_info"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_weight="1"
        android:scaleType="fitXY"
        android:src="@drawable/splash7" />

    <Button
        android:id="@+id/btn_receive_order"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="@drawable/shape_corner_login"
        android:text="@string/receive"
        android:textColor="@color/white"
        android:layout_marginBottom="10dp"
        android:textSize="20sp" />

</LinearLayout>
